@model cbsStudents.Models.Entities.Post

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Post</h1>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @await Html.PartialAsync("_CreateEditPost")
        </form>
    </div>
</div>

@foreach (var comment in Model.Comments)
{
    <div class="row">
    <div class="col-md-4">
        <div>
            @comment.User.Email
        </div>
        <div>
            @comment.Text
        </div>
    </div>
</div>

}

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
